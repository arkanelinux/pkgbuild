pkgname=arkane-buildbot
pkgver=2023.3.24
pkgrel=3
pkgdesc="Arkane Linux buildbot program"
arch=('x86_64')
url="https://github.com/arkanelinux/buildbot"
license=('BSD-3-Clause')
depends=('bash')
source=("git+https://github.com/arkanelinux/buildbot.git")
sha512sums=('SKIP')

package() {
	cd "$pkgdir"

	install -d usr/bin
	install -d usr/lib/systemd/system
	install -d etc/arkane-buildbot

	install -m755 "$srcdir"/buildbot/src/arkane-buildbot usr/bin/

	install -m644 "$srcdir"/buildbot/src/arkane-buildbot@.service usr/lib/systemd/system/

	for f in arkane arch_community arch_packages; do
		install -m644 "$srcdir"/buildbot/src/"$f" etc/arkane-buildbot/
	done

}
