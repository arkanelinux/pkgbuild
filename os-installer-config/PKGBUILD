pkgname=os-installer-config
pkgver='v1.1.alpha'
pkgrel=1
pkgdesc='Default Arkane Linux configuration files for the os-installer'
url='https://github.com/arkanelinux/pkgbuild/tree/main/os-installer-config'
arch=('x86_64')
license=('BSD')
depends=('os-installer')
source=('https://github.com/arkanelinux/os-installer-config/archive/refs/tags/v1.0-alpha.zip')
sha256sums=('SKIP')

package() {
	cd "$pkgdir"

	install -d etc/os-installer
	cp -r $srcdir/os-installer*/* etc/os-installer
}

