pkgname=arkdep
pkgver=2023.09.21
pkgrel=1
pkgdesc='Toolkit for building, deploying and maintaining a btrfs-based multi-root system'
url='https://github.com/arkanelinux/arkanium'
arch=('any')
license=('GPL3')
source=('https://github.com/arkanelinux/arkanium/archive/refs/heads/main.zip')
sha256sums=('SKIP')

package() {
	cd $pkgdir

	install -d etc/arkanium
	install -d usr/bin

	install -m755 $srcdir/arkanium-main/arkanium-build usr/bin/
	cp -rv $srcdir/arkanium-main/arkanium-build.d/* etc/arkanium/
	install -m755 $srcdir/arkanium-main/arkdep usr/bin/
}

