pkgname=os-installer
pkgver=0.1
pkgrel=1
pkgdesc='Operating system installer by the GNOME project'
url='https://gitlab.gnome.org/p3732/os-installer'
source=("git+https://gitlab.gnome.org/p3732/os-installer.git")
arch=('x86_64')
license=('GPL-3.0-or-later')
makedepends=('gnome-desktop' 'gtk4' 'libadwaita' 'libgweather-4' 'python-yaml' 'udisks2' 'vte4' 'meson')
depends=('gnome-desktop' 'gtk4' 'libadwaita' 'libgweather-4' 'python-yaml' 'udisks2' 'vte4' 'epiphany' 'gnome-disk-utility' 'gnome-control-center')
sha256sums=(SKIP)

build () {
	cd "$pkgname"
	
	meson build
}

package() {
	cd "$srcdir/$pkgname"

	sudo meson install -C build --destdir $pkgdir
}
